<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.oguzc.projectshop.MainMenuActivity"
    android:background="@drawable/backgroundtile">

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonLayout">

        <ImageButton android:background="@drawable/button_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/book"
            android:id="@+id/bookButton"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"/>

        <ImageButton android:background="@drawable/button_style"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/music"
            android:id="@+id/musicCdButton"
            android:layout_toRightOf="@id/bookButton"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <ImageButton android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/film"
        android:id="@+id/filmDvdButton"
        android:layout_centerInParent="true"
        android:layout_below="@+id/buttonLayout"
        android:layout_marginTop="10dp" />

    <Button android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Cart"
        android:id="@+id/cartButton"
        android:layout_below="@+id/filmDvdButton"
        android:layout_marginTop="60dp"
        android:textColor="#FFFF"/>

    <Button android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Purchased"
        android:id="@+id/purchasedButton"
        android:layout_below="@+id/cartButton"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF"/>

    <Button android:background="@drawable/button_style"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Log Out"
        android:id="@+id/exitButton"
        android:layout_below="@+id/purchasedButton"
        android:layout_marginTop="10dp"
        android:textColor="#FFFF"/>

</RelativeLayout>